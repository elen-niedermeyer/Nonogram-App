<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niedermeyer.nonogram">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.activity.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.activity.GameActivity"
            android:parentActivityName=".gui.activity.StartActivity" />
        <activity android:name=".gui.activity.OptionsActivity" />
        <activity android:name=".gui.activity.StatisticsActivity" />
        <activity android:name=".gui.activity.AboutActivity"/>
    </application>

</manifest>