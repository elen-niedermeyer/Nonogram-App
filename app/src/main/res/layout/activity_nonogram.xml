<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nonogram_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="horizontal"
    tools:context="niedermeyer.nonogram.activities.NonogramActivity">

    <LinearLayout
        android:id="@+id/activity_nonogram_buttons_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/game_field_size_view"
            style="@style/CountViewsTop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/activity_nonogram_buttons_menu_new"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/new_game" />

        <Button
            android:id="@+id/activity_nonogram_buttons_menu_reset"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/reset_game" />

        <ImageButton
            android:id="@+id/activity_nonogram_buttons_menu_menu"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/nothing"
            android:layout_marginRight="@dimen/nothing"
            android:contentDescription="@string/options"
            android:src="@drawable/ic_menu_black" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/activity_nonogram_scroll_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_nonogram_buttons_menu"
        android:layout_margin="@dimen/margin_for_views"
        android:background="@color/background_color">

        <HorizontalScrollView
            android:id="@+id/activity_nonogram_scroll_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color">

            <TableLayout
                android:id="@+id/activity_nonogram_field"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background_color" />

        </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>

