<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- general -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/style_buttons</item>
        <item name="android:layout_margin">@dimen/distance_views_1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading">
        <item name="android:layout_margin">@dimen/distance_views_1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:layout_margin">@dimen/distance_views_1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- playing field -->
    <!-- playing field text views -->
    <style name="CountViewsTop">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/distance_views_1</item>
        <item name="android:textSize">@dimen/count_numbers</item>
        <item name="android:padding">@dimen/distance_views_1</item>
    </style>

    <style name="CountViewsLeft">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">@dimen/distance_views_1</item>
        <item name="android:textSize">@dimen/count_numbers</item>
        <item name="android:padding">@dimen/distance_views_1</item>
    </style>

    <!-- menu -->
    <style name="MenuItems">
        <item name="android:background">@drawable/menu_item_style</item>
        <item name="android:padding">@dimen/distance_views_1</item>
        <item name="android:layout_marginRight">@dimen/distance_views_1</item>
    </style>
</resources>
