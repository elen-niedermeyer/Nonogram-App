<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="CountViewsTop">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/margin_for_views</item>
        <item name="android:textSize">@dimen/count_numbers</item>
        <item name="android:padding">@dimen/margin_for_views</item>
    </style>

    <style name="CountViewsLeft">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">@dimen/margin_for_views</item>
        <item name="android:textSize">@dimen/count_numbers</item>
        <item name="android:padding">@dimen/margin_for_views</item>
    </style>

    <style name="MenuItems">
        <item name="android:background">@drawable/menu_item_style</item>
        <item name="android:padding">@dimen/margin_for_views</item>
        <item name="android:layout_marginBottom">@dimen/margin_for_views</item>
        <item name="android:layout_marginRight">@dimen/screen_border_margin</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_margin">@dimen/margin_for_views</item>
    </style>
</resources>
