<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- shadow -->
            <item>
                <shape>
                    <solid android:color="@color/gray" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
            <!-- button -->
            <item android:bottom="@dimen/button_corners">
                <shape>
                    <padding android:bottom="@dimen/button_corners" android:left="@dimen/screen_border_margin" android:right="@dimen/screen_border_margin" android:top="@dimen/button_corners" />
                    <solid android:color="@color/gray_light" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>