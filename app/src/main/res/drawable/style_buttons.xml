<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- normal, not pressed -->
    <item android:state_pressed="false">
        <layer-list>
            <!-- button -->
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="@color/color_primary" android:startColor="@color/color_primary_dark" />
                    <padding android:bottom="@dimen/button_corners" android:left="@dimen/margin_for_views_twice" android:right="@dimen/margin_for_views_twice" android:top="@dimen/button_corners" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- button -->
            <item android:bottom="@dimen/button_corners">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/color_accent" android:startColor="@color/color_accent_dark" />
                    <padding android:bottom="@dimen/button_corners" android:left="@dimen/margin_for_views_twice" android:right="@dimen/margin_for_views_twice" android:top="@dimen/button_corners" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>